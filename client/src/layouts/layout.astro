---
import "../styles/global.css";

export interface Props {
	title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<link rel="icon" type="image/png" href="/favicon.png" />
	</head>
	<body>
		<slot />
	</body>
</html>
